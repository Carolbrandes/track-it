# ======================================
# Track-it — Environment Variables
# ======================================
# Copy this file to .env and fill in the values.

# ---- JWT ----
JWT_SECRET=your_jwt_secret_here

# ---- MongoDB ----
# Docker Compose (hostname "mongo" = service name in docker-compose.yml):
#   MONGODB_URI=mongodb://mongo:27017/trackit
# Local / mesmo servidor:
#   MONGODB_URI=mongodb://localhost:27017/trackit
# Digital Ocean Droplet (MongoDB em outro servidor):
#   MONGODB_URI=mongodb://IP_DO_SERVIDOR:27017/trackit
# Com usuário e senha:
#   MONGODB_URI=mongodb://usuario:senha@IP:27017/trackit?authSource=admin
# MongoDB Atlas / Managed DB (connection string do painel):
#   MONGODB_URI=mongodb+srv://...
MONGODB_URI=mongodb://localhost:27017/trackit

# ---- Email (Resend) ----
RESEND_API_KEY=re_your_api_key_here

# ---- Google Gemini AI ----
GEMINI_API_KEY=your_gemini_api_key_here

# ---- NextAuth (if needed) ----
# NEXTAUTH_URL=http://localhost:3000
# NEXTAUTH_SECRET=your_nextauth_secret_here
